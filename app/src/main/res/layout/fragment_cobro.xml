<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".CobroFragment"
    android:background="?android:attr/windowBackground">

    <ImageButton
        android:id="@+id/arrowBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/design_default_color_background"
        android:contentDescription="@string/boton_atras"
        android:minHeight="48dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_titulo_cobro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/proceso_de_cobro"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/txt_cobro_total"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/txt_cobro_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_a_pagar_0_00"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/txt_titulo_cobro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt_dividir_titulo"/>

    <TextView
        android:id="@+id/txt_dividir_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dividir_la_cuenta"
        android:textColor="#03A052"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/txt_cobro_total"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt_personas_label"/>

    <TextView
        android:id="@+id/txt_personas_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personas"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/txt_dividir_titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_numero_personas"/>

    <EditText
        android:id="@+id/edit_numero_personas"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="1"
        android:textSize="20dp"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txt_personas_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_dividir_cuenta"/>

    <Button
        android:id="@+id/btn_dividir_cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calcular_divisi_n"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/edit_numero_personas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt_resultado_division"/>

    <TextView
        android:id="@+id/txt_resultado_division"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="italic"
        tools:text="Cada uno paga: $1500.00"
        app:layout_constraintTop_toBottomOf="@id/btn_dividir_cuenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_finalizar_cobro"/>

    <Button
        android:id="@+id/btn_finalizar_cobro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/finalizar_cobro"
        android:backgroundTint="@color/green"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/btn_cancelar_cobro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_cancelar_cobro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/cancelar_cobro"
        android:backgroundTint="@color/red"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>