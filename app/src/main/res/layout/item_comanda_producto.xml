<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp">
    
    <!-- Nombre y Subtotal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/txt_item_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Plato"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txt_item_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1500.00"
            android:textColor="#4CAF50"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Controles (+ - Borrar) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <!-- Bot칩n Menos -->
        <ImageButton
            android:id="@+id/btn_restar_producto"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_input_delete"
            app:tint="#F44336" />

        <!-- Cantidad en el medio -->
        <TextView
            android:id="@+id/txt_item_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginHorizontal="4dp"/>

        <!-- Bot칩n M치s -->
        <ImageButton
            android:id="@+id/btn_sumar_producto"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_input_add"
            app:tint="#4CAF50" />

        <!-- Bot칩n Eliminar (Basura) -->
        <ImageButton
            android:id="@+id/btn_eliminar_producto"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="#757575" />

    </LinearLayout>
</LinearLayout>